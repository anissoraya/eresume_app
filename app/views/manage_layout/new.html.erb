<style>
  @media screen and (max-width:780px){
    .panel{
      margin-top: 50px;
      margin-right: 30px;
      margin-left: 30px;
    }
  }
</style>

<div class="panel panel-default" style="margin-left:35px">
  <div class="panel-body">
    <%= render 'layouts/form', layout: @layout %>
</div>
</div>
<legend></legend>

<div class="container">
  <table class="table">
    <tr>
      <td>Layout Image</td>
      <td>Name</td>
      <td></td>
    </tr>
  <% @layouts.each do |layout| %>
  <tr>
    <td>
      <%= image_tag(layout.layout_image(:thumb)) %>

    </td>
    <td>
      <%= layout.name %>
    </td>
    <td>
      <%= link_to 'Edit Layout', manage_layout_edit_path(layout), class: 'btn btn-link'%>
    </td>
  </tr>
  <%end%>
  </table>
</div>
