<style>
.radio-toolbar label > input{ /* HIDE RADIO */
  visibility: hidden; /* Makes input not-clickable */
  position: absolute; /* Remove input from document flow */
}
.radio-toolbar label > input + img{ /* IMAGE STYLES */
  cursor:pointer;
  border:5px solid grey;
}
.radio-toolbar label > input:checked + img{ /* (RADIO CHECKED) IMAGE STYLES */
  border:5px ridge #76e2ce;
}


</style>

<% if current_user.user_layout.present? %>

  <%= form_for(current_user.user_layout) do |f| %>
  <div class="container"style="min-height: 500px;text-align:center">
    <div class="panel panel-default">
      <div class="panel-heading"><strong>CHOOSE LAYOUT</strong><br><br><%= f.submit 'Save Layout', class: 'btn btn-success', style:'width:150px' %></div>
      <div class="panel-body">
  <div class="radio-toolbar">
  <%= f.collection_radio_buttons(:layout_id, Layout.all, :id, :layout_image)  do |b| %>
    <div class="col-sm-3"><%= b.label { b.radio_button + image_tag(b.object.layout_image(:medium)) } %></div>
  <%end%>
</div>
    <div class="row">
    <div class="col-sm-12">
      <br>

    </div>
  </div>
</div></div>
</div>
<%end%>
  <%else%>

    <%= form_for(current_user.build_user_layout) do |f| %>
    <div class="container"style="min-height: 500px;text-align:center">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>CHOOSE LAYOUT</strong><br><br><%= f.submit 'Save', class: 'btn btn-success', style:'width:150px' %></div>
        <div class="panel-body">
    <div class="radio-toolbar">
    <%= f.collection_radio_buttons(:layout_id, Layout.all, :id, :layout_image)  do |b| %>
      <div class="col-sm-3"><%= b.label { b.radio_button + image_tag(b.object.layout_image(:medium)) } %></div>
    <%end%>
    </div>
      <div class="row">
      <div class="col-sm-12">
        <br>
        <center><%= f.submit 'Save', class: 'btn btn-success', style:'width:150px' %></center>
      </div>
    </div>
  </div></div>
</div>
    <%end%>

    <%end%>

