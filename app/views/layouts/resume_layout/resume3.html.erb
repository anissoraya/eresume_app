<!DOCTYPE html>
<html>
  <head>
    <title>E-resume.my</title>
    <%= csrf_meta_tags %>

    <%= wicked_pdf_stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' -%>
    <%= wicked_pdf_javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    html,body{
      margin:0;
      padding: 0;
      margin: 0;
      padding: 0;
      background-color: black;
    }
    body{
      background-color: #c6c6c6;
    }

    .main {
    width: 100%;
    min-height: 11in;
    display: -webkit-flex;
    display: flex;
    overflow-y: auto;
    }


  .main .left-box {
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 0.32;
    width:20%;
    color:white;
  }
  .main .right-box{
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width:50%;
    padding:20px 20px 0 20px;

  }

  .section-title{
    width: 100%;
    padding: 10px;
    background-color: #455166;
  }
  .body{
    padding:15px 15px 10px 15px;
    font-size: 12px;
    line-height: 30px;
  }
  .progress-bar, .progress{
    border-radius: 0;
  }
  .progress-bar-default{
    background-color: #3a5175;
  }
  .title{
    font-weight: bold;
    font-size: 19px;
  }

    </style>
  </head>

  <body>
    <div class="main">
      <div class="left-box" style="background-color:#667896; ">
        <div style="padding:10px"><center><h3><%= @user.personal_detail.name %></h3></center></div>
        <div class="section-title">
          PERSONAL DETAILS
        </div>
        <div class="body">
          <strong>Phone</strong><br>
          <%= @user.personal_detail.phone_no %><br>
          <strong>Address</strong><br>
          <%= @user.personal_detail.full_street_address %><br>
          <strong>Email</strong><br>
          <%= @user.email %><br>
        </div>
        <div class="section-title">
          SKILLS
        </div>
        <div class="body">
          <% @user.skills.order(rate: :desc).each do |skill|%>
          <div><%= skill.title %></div>
          <div class="progress">
            <div class="progress-bar progress-bar-default" style="width:<%= 100*skill.rate/5%>%" role="progressbar" aria-valuemin="0" aria-valuemax="100">
              <span style="text-align:center"><%= 100*skill.rate/5%>%</span>
            </div>
          </div>
          <%end%>
        </div>
        <div class="section-title">
          LANGUAGES
        </div>
        <div class="body">
          <% @user.languages.each do |language|%>
          <div class="progress">
            <div class="progress-bar progress-bar-default" style="width:<%= 100*language.writing_rate/5%>%" role="progressbar" aria-valuemin="0" aria-valuemax="100">
              <span style="text-align:center"><%= language.title %></span>
            </div>
          </div>
          <%end%>
        </div>
      </div>
      <div  class="right-box" style="background-color:white;">
        <% if @user.summary.present? %>
        <section>
          <div class="body">
            <%= @user.summary.description %>
          </div>
        </section>
        <% end %>
        <% if @user.educations.present? %>
        <div class="row">
        <section>
          <div class="title">
          <span style="padding-left:9px"><i class="fa fa-graduation-cap"></i></span><span style="padding-left:10px">EDUCATIONS</span>
          </div>
          <div class="body">
            <% @user.educations.each do |edu| %>
                <div class="col-sm-6 col-xs-6" style="font-weight:bold;">
                    <%= edu.major %>
                </div>
                <div class="col-sm-6 col-xs-6" style="text-align:right"><%= edu.date_enter %> - <%= edu.date_quit %></div>
                <div class="col-sm-12 col-xs-12"><%= edu.school %><br><%= edu.description%></div>
              <%end %>
          </div>
        </section>
      </div>
        <%end%>
        <% if @user.employment_histories.present? %>
        <div class="row">
        <section>
          <div class="title">
          <span style="padding-left:9px"><i class="fa fa-briefcase"></i></span><span style="padding-left:10px">EXPERIENCES</span>
          </div>
          <div class="body">
            <% @user.employment_histories.each do |work| %>
                <div class="col-sm-6 col-xs-6" style="font-weight:bold;">
                    <%= work.job_title %>
                </div>
                <div class="col-sm-6 col-xs-6" style="text-align:right"><%= work.date_enter %> - <% if work.presently_emp? %>
                 Present
                <%else%>
                <%= work.date_quit %>
                <%end%>
              </div>
                <div class="col-sm-12 col-xs-12"><%= work.company %><br><%= work.description%></div>
              <%end %>
          </div>
        </section>
      </div>
        <%end%>
        <% if @user.projects.present? %>
        <div class="row">
        <section>
          <div class="title">
          <span style="padding-left:9px"><i class="fa fa-rocket"></i></span><span style="padding-left:10px">PROJECTS</span>
          </div>
          <div class="body">
            <% @user.projects.each do |project| %>
                <div class="col-sm-6 col-xs-6" style="font-weight:bold;">
                    <%= project.title %>
                </div>
                <div class="col-sm-6 col-xs-6" style="text-align:right"><%= project.pro_date %></div>
                <div class="col-xs-12 col-sm-12"><%= project.company %><br><%= project.description%></div>
              <%end %>
          </div>
        </section>
      </div>
        <%end%>
        <% if @user.references.present? %>
        <div class="row">
        <section>
          <div class="title">
          <span style="padding-left:9px"><i class="fa fa-phone"></i></span><span style="padding-left:10px">REFERENCES</span>
          </div>
          <div class="body">
            <% @user.references.each do |ref| %>
                <div class="col-sm-6 col-xs-6" style="font-weight:bold;">
                    <%= ref.name %>
                </div>
                <div class="col-sm-12 col-xs-12"><%= ref.company%><br><%= ref.address%><br><%= ref.phone%><br><%= ref.email%></div>
              <%end %>
          </div>
        </section>
      </div>
        <%end%>
    </div>
  </body>
  </html>
