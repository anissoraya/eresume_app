<!DOCTYPE html>
<html>
  <head>
    <title>E-resume.my</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!-- CSS Layout -->

<!-- CSS Layout -->
  <style>
  .navbar-default{
    background-color: #2BBBAD;
    border: 0;
    border-radius: 0;
  }
  .top-nav-collapse {
           background-color: #3F729B !important;
       }

       <!--Remember to set navbar color for mobile devices -->
       @media only screen and (max-width: 768px) {
           .navbar {
               background-color: #3F729B !important;
           }
       }
     }

     .navbar-toggle{
       background-color: black;
     }
  </style>
  </head>

  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_url %>"><font style="color:white; font-weight:bold">E-resume.my</font></a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">

        <ul class="nav navbar-nav navbar-right">
          <%if !user_signed_in? %>
          <li style="font-weight:bold"><%= link_to new_user_session_path do %><i class="fa fa-user"></i>&nbsp; Log In<%end%></li>
          <%else%>
          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
          <%end%>
        </ul>
      </div>
    </div>
  </nav>
    <!--Navigation-->
    <!-- Navbar -->
<% if flash[:alert] %>
<div class="alert alert-danger" id="alert">
  <span style="padding-right:10px"><i class="glyphicon glyphicon-remove"></i></span> <%= flash[:alert]%>
</div>
  <%elsif flash[:notice]%>
    <div class="alert alert-success" id="notice">
      <span style="padding-right:10px" ><i class="glyphicon glyphicon-ok"></i></span> <%= flash[:notice]%>
    </div>
<%end%>

  <%= yield %>

  </body>
</html>
