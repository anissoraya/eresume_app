<!--form start-->
<%= form_for(education) do |f| %>
  <% if education.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(education.errors.count, "error") %> prohibited this personal_detail from being saved:</h2>

      <ul>
      <% education.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- Text input-->
<div class="form-group">
  <%= f.label 'Major Field of Study', class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :major, class: 'form-control', autofocus: true, required: true%>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :school, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :school, class: 'form-control', required: true%>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :status, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :status, Education::STATUS,{}, { class: "form-control" } %>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :location, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :location, class: 'form-control', required: true %>
    <br>
  </div>
</div>

  <div class="form-group">
    <%= f.label :description, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', maxlength: 200, placeholder: 'max: 200 words' %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date, class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <div class="form-group">
      <div class='input-group date' id='datetimepicker1'>
      <%= f.date_field :start_date, class: "form-control", required: true %>
      <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
      </span>
        </div>
      </div>
      <br>
    </div>
  </div>
