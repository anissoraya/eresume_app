<!--form start-->
<%= form_for(education, id:'form_edu', remote: true) do |f| %>
  <% if education.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(education.errors.count, "error") %> prohibited this personal_detail from being saved:</h2>

      <ul>
      <% education.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- Text input-->
<div class="form-group">
  <%= f.label 'Major Field of Study', class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :major, class: 'form-control', autofocus: true %>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :school, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :school, class: 'form-control'%>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :status, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :status, Education::STATUS,{}, { class: "form-control" } %>
    <br>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <%= f.label :location, class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :location, class: 'form-control' %>
    <br>
  </div>
</div>

  <div class="form-group">
    <%= f.label :description, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date, class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <div class="form-group">
      <div class='input-group date' id='datetimepicker1'>
      <%= f.text_field :start_date, class: "form-control" %>
      <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
      </span>
        </div>
      </div>
      <br>
    </div>
  </div>

<div class="form-group">
  <%= f.label :end_date, class:'col-sm-2 control-label' %>
  <div class="col-sm-4">
    <div class="form-group">
    <div class='input-group date' id='datetimepicker2'>
    <%= f.text_field :end_date, class: "form-control" %>
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
    </span>
      </div>
    </div>

    <br>
  </div>
</div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="pull-right">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<%end%>
<!--form end-->
<script type='text/javascript'>

$('#form_edu').submit(function() {
   var valuesToSubmit = $(this).serialize();
   $.ajax({
       type: "POST",
       url: $(this).attr('action'), //sumbits it to the given url of the form
       data: valuesToSubmit,
       dataType: "JSON" // you want a difference between normal and ajax-calls, and json is standard
   }).success(function(json){
       console.log("success", json);
   });
   return false; // prevents normal behaviour
});

$(function () {
        $('#datetimepicker1').datetimepicker({
            format: 'YYYY-MM-DD'
        });
        $('#datetimepicker2').datetimepicker({
            useCurrent: false,
            format: 'YYYY-MM-DD' //Important! See issue #1075

        });
        $("#datetimepicker1").on("dp.change", function (e) {
            $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker2").on("dp.change", function (e) {
            $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
        });
});

</script>
