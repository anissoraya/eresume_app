<%= form_for(project, id:'form_pr', remote: true) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label :company, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :company, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label :project_date, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :project_date, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>
  <div class="field">
    <%= f.label 'Youtube Link', class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :link, class: 'form-control', autofocus: true, placeholder:'ex: https://www.youtube.com/embed/DM41aQTk7Yk' %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<script type='text/javascript'>

$('#form_pr').submit(function() {
   var valuesToSubmit = $(this).serialize();
   $.ajax({
       type: "POST",
       url: $(this).attr('action'), //sumbits it to the given url of the form
       data: valuesToSubmit,
       dataType: "JSON" // you want a difference between normal and ajax-calls, and json is standard
   }).success(function(json){
       console.log("success", json);
   });
   return false; // prevents normal behaviour
});

</script>
