<%= form_for(skill) do |f| %>
  <% if skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label :rate, class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.select :rate, options_for_select({ "Beginner" => 1, "Intermediate" => 3, "Expert" => 5 }, 1), {}, class: 'form-control' %>
      <br>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
