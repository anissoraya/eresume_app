<% @experiences.each do |experience| %>
  <div align="right">
    <%= link_to edit_employment_history_path(experience), class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-pencil" style="color:white"></i>
    <% end %>
    <%= link_to experience, method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-remove" style="color:white"></i>
    <% end %>
  </div>
  <h4><%= experience.job_title %> at <%= experience.company %></h4>
    <%= experience.date_enter %> -
    <% if experience.presently_emp? %>
      Present<br>
      <%else %>
      <%= experience.date_quit %><br>
    <%end%>
    <%= experience.location %><br>
    Description: <%= experience.description %>
  <br><br>
  <legend></legend>
<%end%>
