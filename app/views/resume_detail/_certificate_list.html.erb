<% @certs.each do |cert| %>
  <div align="right">
    <%= link_to edit_certificate_path(cert), class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-pencil" style="color:white"></i>
    <% end %>
    <%= link_to cert, method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-remove" style="color:white"></i>
    <% end %>
  </div>
  <h4><%= cert.title %> <span>(<%= cert.date %>)</span></h4>
  <br><br>
  <legend></legend>
<%end%>
