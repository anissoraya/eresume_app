<% @languages.each do |language| %>
  <div align="right">
    <%= link_to edit_language_path(language), class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-pencil" style="color:white"></i>
    <% end %>
    <%= link_to language, method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-remove" style="color:white"></i>
    <% end %>
  </div>
  <br>
  <table style="border:0px; width:100%">
    <tr>
    <td style="padding-left: 10px">
      <div class="progress skill-bar">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= 100*language.writing_rate/5 %>" aria-valuemin="0" aria-valuemax="100" >
              <span class="skill"><%= language.title %><i class="val"><%= 100* language.writing_rate / 5%> %</i></span>
          </div>
      </div>
    </td>
    </tr>
    </table>
  <br>
<%end%>
