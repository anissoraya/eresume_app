<% @skills.each do |skill| %>
  <div align="right">
    <%= link_to edit_skill_path(skill), class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-pencil" style="color:white"></i>
    <% end %>
    <%= link_to skill, method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-remove" style="color:white"></i>
    <% end %>
  </div>
  <br>
          <div class="progress skill-bar">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%= 100*skill.rate/5 %>" aria-valuemin="0" aria-valuemax="100" >
                  <span class="skill"><%= skill.title %><i class="val"><%= 100* skill.rate / 5%> %</i></span>
              </div>
          </div>
  <br><br>
  <legend></legend>
<%end%>
