        });
    });
    $("#add_video").click(function(){
        $("#new_video_form").slideToggle();
        $(this).text(function(i,text){
          return text === "Add Video" ? "Cancel" : "Add Video";
        });
    });
});

$(document).ready(function() {
     $('.progress .progress-bar').css("width",
               function() {
                   return $(this).attr("aria-valuenow") + "%";
               }
       )
   });

</script>
