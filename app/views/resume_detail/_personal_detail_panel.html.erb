  <div class="col-xs-12">
      <div class="col-xs-12 panel panel-default" style="padding:10px">
        <%if current_user.personal_detail.present? %>
          <div align="right">

              <button id="toogle" class="btn btn-success">
                <i class="glyphicon glyphicon-pencil"></i>
              </button>
          </div>
          <%else%>
          <div align="center">

              <button id="add_pd" class="btn btn-default">
                Add Personal Detail
              </button>
          </div>
          <%end%>
          <% if current_user.personal_detail.present? %>
              <center>
              <%= render 'user_detail' %>
              </center>
          <%end%>
          <% if current_user.personal_detail.present? %>
                <div class="col-xs-12" id="personal_details_edit" style="display:none">
                <%= render 'personal_details/form', personal_detail: current_user.personal_detail %>
                </div>
                  <% else %>
                  <div class="col-xs-12" id="new_pd_form" style="display:none">
                  <%= render 'personal_details/form', personal_detail: current_user.build_personal_detail %>
                  </div>
          <%end%>
      </div>
    </div>
