<%= form_for(language, id:'form_lan', remote: true) do |f| %>
  <% if language.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(language.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
      <% language.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label "Rate", class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.select :writing_rate, options_for_select({ "Beginner" => 1, "Conversational" => 3, "Fluent" => 4, "Native" => 5 }, selected: f.object.writing_rate), {}, class: 'form-control' %>
      <br>
    </div>
  </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<script type='text/javascript'>

$('#form_lan').submit(function() {
   var valuesToSubmit = $(this).serialize();
   $.ajax({
       type: "POST",
       url: $(this).attr('action'), //sumbits it to the given url of the form
       data: valuesToSubmit,
       dataType: "JSON" // you want a difference between normal and ajax-calls, and json is standard
   }).success(function(json){
       console.log("success", json);
   });
   return false; // prevents normal behaviour
});

</script>
