<%= form_for(language) do |f| %>
  <% if language.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(language.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
      <% language.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', autofocus: true %>
      <br>
    </div>
  </div>

  <div class="field">
    <%= f.label "Writing", class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.select :writing_rate, options_for_select({ "Poor" => 1, "Good" => 3, "Excellent" => 5 }, 1), {}, class: 'form-control' %>
      <br>
    </div>
  </div>
  <div class="field">
    <%= f.label "Speaking", class:'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.select :spoken_rate, options_for_select({ "Poor" => 1, "Good" => 3, "Excellent" => 5 }, 1), {}, class: 'form-control' %>
      <br>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
