
<%= form_for(video_gallery) do |f| %>
  <% if video_gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(video_gallery.errors.count, "error") %> prohibited this video_gallery from being saved:</h2>

      <ul>
      <% video_gallery.errors.full_messages.each do |message| %>
