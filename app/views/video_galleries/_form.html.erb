      <%= f.text_field :name, class: 'form-control', autofocus: true, required: true %>
      <br>
    </div>
  </div>


  <%= f.label 'Youtube Link', class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
  <div class="input-group">
  <div class="input-group-addon">https://www.youtube.com/embed/</div>
    <%= f.text_field :link, class: 'form-control', id:"exampleInputAmount", placeholder:"eg: h3iue6F6d0E", required: true %>
  </div>
  <br>
  <br>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
